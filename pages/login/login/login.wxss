/* pages/login/login/login.wxss */

.page {
    width: 100%;
    font-size: 14px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
}

.backgroundImg {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;
}

.loginBox {
    width: 80%;
    /* background-color: yellow; */
    position: absolute;
    animation: loginBox .6s;
}

@keyframes loginBox{
0%   {bottom:0px;opacity: 0}
25%  {bottom: 50px;opacity: 0.3}
50%  {bottom: 90px;opacity: 0.5}
75%  {bottom: 130px;opacity: 0.7}
100% {bottom:150px;opacity: 1}
}

.accountNum, .pwd {
    width: 100%;
    height: 44px;
    border-bottom: 1px solid #199aba;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 15px;
}

.accountNum image, .pwd image {
    width: 22px;
    height: 22px;
}

.accountNum input, .pwd input {
    width: 80%;
    margin-right: 20px;
}

.loginBtn {
    width: 100%;
    margin-top: 25px;
}

.tip {
    margin-top: 10px;
    font-size: 12px;
    text-align: right;
    color: #a8a8a8;
}

.register {
    color: #199aba;
}

