/* pages/home/radio/radio.wxss */
.radioBox{
    width: 85%;
    height: 240px;
    margin: 18px auto;
    border-radius: 10px;
    box-shadow: 10px 10px 5px #888;
    background-color: #f3edca;
}
.radioBox image {
    width: 100%;
    height: 75%;
    border-radius: 10px 10px 2px 2px;
}
.name {
    margin: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.category{
    color: #D62C25;
    margin-right: 5px;
}