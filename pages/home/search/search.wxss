/* pages/home/search/search.wxss */

page {
    background-color: #f2f2f2;
}

.van-search {
    width: 100%;
    position: fixed;
    top: 0;
    z-index: 1;
}
.list{
    margin-top: 44px;
}
.hotTitle {
    width: 100%;
    height: 44px;
    margin-top: 50px;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.hotTitle image {
    width: 20px;
    height: 20px;
    margin-left: 15px;
}

.hotBox .content {
    width: 90%;
    padding: 5px 15px;
    display: flex;
    flex-wrap: wrap;
    background-color: #F2F2F2;
}

.hotBox .content text {
    padding: 2px 5px;
    border-radius: 10px;
    margin-right: 5px;
    margin-bottom: 5px;
    background-color: #99a48e;
    border: 1px solid #99a48e;
}
