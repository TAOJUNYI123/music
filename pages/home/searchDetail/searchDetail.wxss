/* pages/home/searchDetail/searchDetail.wxss */
.albums,.singer,.radios{
    width: 100%;
    height: 70px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #EDECE8;
}
.albums image,.radios image{
    width: 50px;
    height: 50px;
    margin-left: 15px;
    border-radius: 10px;
}
.albums .right,.radios .right,.videos .right{
    width: 60%;
    height: 100%;
    margin: 0 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.videos .right .title{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}
.msg{
    margin-top: 5px;
    color: #7D7E80;
    font-size: 12px;
}
.singer image{
    width: 50px;
    height: 50px;
    border-radius: 50px;
    margin-left: 15px;
    margin-right: 10px;
}
.videos{
    width: 100%;
    height: 85px;
    display: flex;
    align-items: center;
    position: relative;
    border-bottom: 1px solid #EDECE8;
}
.videos image{
    width: 120px;
    height: 70px;
    margin-left: 15px;
    border-radius: 10px;
}
.videos .playTime{
    position: absolute;
    top: 11px;
    left: 80px;
    color: white;
    font-size: 12px;
}
.play{
    top: -22px;
    right: 54px;
}