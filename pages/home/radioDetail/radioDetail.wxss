/* pages/home/radioDetail/radioDetail.wxss */

.name {
    margin: 10px;
    font-size: 16px;
    font-weight: bold;
    color: #199ABA;
}

.itemBox {
    width: 100%;
    height: 140px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    border-top: 1px solid #edece8;
    border-bottom: 1px solid #edece8;
}

.itemBox image {
    width: 30%;
    height: 70%;
    border-radius: 5px;
}

.itemBox .right {
    width: 60%;
    height: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.right .title {
    font-weight: bold;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.right .description {
    font-size: 12px;
    color: #A6A6A6;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
