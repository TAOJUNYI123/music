/* 发现 */

.banner {
    width: 100%;
    height: 150px;
}

.menuBox {
    width: 100%;
    height: 60px;
    display: flex;
    border-bottom: 1px solid #edece8;
}

.menu {
    width: 20%;
    height: 100%;
    font-size: 11px;
    color: #242424;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.menu:active {
    background-color: #edece8;
}

.menu image {
    width: 24px;
    height: 24px;
    margin-bottom: 3px;
}

.newBox, .exclusive {
    width: 90%;
    height: 44px;
    line-height: 44px;
    font-weight: bold;
    margin-left: 15px;
}

.newAlbum {
    padding: 0 15px 15px 15px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    border-bottom: 6px solid #edece8;
}

.newAlbum .new {
    width: 90px;
    display: flex;
    flex-direction: column;
    margin: 0 10px 10px 10px;
    /* background-color: pink; */
}

.newAlbum image {
    width: 90px;
    height: 90px;
    border-radius: 10px;
}

.new .name {
    margin-top: 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.new .artist {
    color: #99a48e;
    font-size: 11px;
}

.exclusiveBox {
    width: 90%;
    height: 180px;
    border-radius: 10px;
    margin: 0 auto;
    margin-bottom: 15px;
    background-color: #edece8;
}

.exclusiveBox image {
    width: 100%;
    height: 140px;
    border-radius: 10px 10px 0 0;
}

.exclusiveBox .name {
    width: 90%;
    height: 40px;
    line-height: 33px;
    margin: 0 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* 我的 */

.meImgBox {
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: center;
    background-color: #edece8;
}

.meImgBox image {
    width: 140rpx;
    height: 140rpx;
    margin-left: 15px;
    margin-right: 15px;
    border-radius: 100rpx;
}

.meImgBox text {
    font-size: 16px;
    font-weight: bold;
}

.meSure {
    width: 240px;
    height: 140px;
    border-radius: 10px;
}

.meBtnBox {
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.meTip {
    width: 100%;
    height: 100px;
    line-height: 100px;
    text-align: center;
}
.backBtn{
    position: fixed!important;
    bottom: 0;
    width: 100%;
}
/* 视频 */

.newMvBox {
    width: 100%;
    height: 170px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* background-color: yellowgreen; */
    position: relative;
}

.newMvBox image {
    width: 80%;
    height: 120px;
    margin-top: 10px;
    border-radius: 10px;
}

.newMvBox .play {
    position: absolute;
    left: 45px;
    bottom: 60px;
}

.playCount {
    color: white;
    position: absolute;
    left: 62px;
    bottom: 56px;
}

.newMvBox .briefDesc {
    display: flex;
    align-items: center;
    width: 80%;
    height: 40px;
    margin-top: 5px;
    padding: 5px;
    /* background-color: yellow; */
    border-bottom: 1px solid #edece8;
}

.rankingBox {
    width: 100%;
    height: 160px;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid #edece8;
}

.rankingBox .head {
    width: 100%;
    height: 44px;
    display: flex;
}

.rankingBox .name, .rankingBox .artistName {
    height: 44px;
    line-height: 44px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.rankingBox .name {
    width: 65%;
}

.rankingBox .artistName {
    width: 35%;
}

.rankingBox .ranking {
    margin-left: 10px;
    margin-right: 2px;
    color: #dc2f27;
    font-weight: bold;
}

.rankingBox .artistName {
    line-height: 44px;
    text-align: center;
    color: #a8a8a8;
}

.rankingBox image {
    width: 90%;
    height: 105px;
    border-radius: 10px;
}

.briefDesc {
    width: 90%;
    margin-top: 8px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
