/* pages/home/home/home.wxss */

.findBox {
    width: 100%;
    background-color: darkkhaki;
}

.right-nav {
    padding: 0 10px 0 30px;
    line-height: 44px !important;
}

.left-nav {
    padding: 0 30px 0 10px;
    line-height: 44px !important;
}

.van-tab--active {
    font-weight: bold !important;
    color: #242424 !important;
}

.van-tabs__line {
    height: 0 !important;
}

/* 发现 */

.banner {
    width: 100%;
    height: 150px;
}

.menuBox {
    width: 100%;
    height: 60px;
    display: flex;
    border-bottom: 1px solid #edece8;
}

.menu {
    width: 20%;
    height: 100%;
    font-size: 11px;
    color: #242424;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.menu:active {
    background-color: #edece8;
}

.menu image {
    width: 24px;
    height: 24px;
    margin-bottom: 3px;
}

.newBox, .exclusive {
    width: 90%;
    height: 44px;
    line-height: 44px;
    font-weight: bold;
    margin-left: 15px;
}

.newAlbum {
    padding: 0 15px 15px 15px;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    border-bottom: 6px solid #edece8;
}

.newAlbum .new {
    width: 90px;
    display: flex;
    flex-direction: column;
    margin: 0 10px 10px 10px;
    /* background-color: pink; */
}

.newAlbum image {
    width: 90px;
    height: 90px;
    border-radius: 10px;
}

.new .name {
    margin-top: 5px;
}

.new .artist {
    color: #99a48e;
    font-size: 11px;
}

.exclusiveBox {
    width: 90%;
    height: 180px;
    border-radius: 10px;
    margin: 0 auto;
    margin-bottom: 15px;
    background-color: #edece8;
}

.exclusiveBox image {
    width: 100%;
    height: 140px;
    border-radius: 10px 10px 0 0;
}

.exclusiveBox .name {
    width: 90%;
    height: 40px;
    line-height: 33px;
    margin: 0 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
/* 我的 */
.meImgBox{
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: center;
    background-color: yellowgreen;
}
.meImgBox image{
