/* pages/home/home/home.wxss */

.findBox {
    width: 100%;
    background-color: darkkhaki;
}

.right-nav {
    padding: 0 10px 0 30px;
    line-height: 44px !important;
}

.left-nav {
    padding: 0 30px 0 10px;
    line-height: 44px !important;
}

.van-tab--active {
    font-weight: bold !important;
    color: #242424 !important;
}

