<!--pages/home/song/song.wxml-->

<view class='page' style='height:{{height-150}}px'>
    <text bindtap='showText'>歌词</text>
    <van-popup show="{{ show }}" custom-class='songText' bind:close="onClose">
        <view wx:for="{{lyric}}" wx:key="{{index}}">{{item}}</view>
    </van-popup>
    <view class='songBox'>
        <image src='{{img}}'></image>
    </view> 
</view>
<view class='footer'>
    <van-slider value="{{value}}" custom-class='slider' disabled bind:change="onChange"/>
    <text class='time'>{{currentTime}}</text>
<image wx:if="{{!start}}" class='startImg' src='../../../img/start.png' bindtap='start'></image>
    <image wx:else class='stopImg' src='../../../img/stop.png' bindtap='stop'></image>
</view>
