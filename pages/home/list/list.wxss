/* pages/home/list/list.wxss */
.headBox{
    width: 100%;
    height: 130px;
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: #199ABA;
}
.headBox image{
    width: 28%;
    height: 78%;
    border-radius: 5px;
}
.headBox .right{
    width: 65%;
    height: 78%;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.right .name{
    font-size: 16px;
    font-weight: bold;
}
.right .description{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}